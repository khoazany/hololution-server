{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "outDir": "../build",
    "rootDir": "../src",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": []
  },
  "include": ["../src/**/*"],
  "exclude": []
}
